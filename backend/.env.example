# ==============================
# Server Configuration
# ==============================
PORT=5000

# CORS allowed origin (Frontend URL)
CORS_ORIGIN=http://localhost:5173

# ==============================
# Database Configuration
# ==============================

# Option 1: Local MongoDB
# MONGO_URI=mongodb://localhost:27017/crm

# Option 2: Dockerized MongoDB (service name "mongo")
# MONGO_URI=mongodb://mongo:27017/crm

# Option 3: MongoDB Atlas (replace <username>, <password>, and <cluster>)
# MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/crm?retryWrites=true&w=majority
MONGO_URI=mongodb://localhost:27017/crm

# ==============================
# Authentication
# ==============================
# Secret key used to sign JWT tokens (use a long random string in production)
JWT_SECRET=your_jwt_secret_here

# ==============================
# Default Admin User
# ==============================
# These values are used to auto-create or update the admin user on startup
ADMIN_NAME=Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=AdminPass123!
